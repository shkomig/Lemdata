# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
# SECURITY: Generate a secure password using: openssl rand -base64 32
DATABASE_URL=postgresql://lemdata:CHANGE_THIS_SECURE_PASSWORD@localhost:5432/lemdata?schema=public

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
# SECURITY: Generate secure secrets using: openssl rand -base64 64
# DO NOT use the example values below - generate your own!
JWT_SECRET=GENERATE_YOUR_OWN_SECRET_MINIMUM_64_CHARACTERS
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=GENERATE_YOUR_OWN_REFRESH_SECRET_MINIMUM_64_CHARACTERS
JWT_REFRESH_EXPIRES_IN=30d

# AI Service Configuration
GEMINI_API_KEY=your-gemini-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:8b

# MinIO Configuration
# SECURITY: Generate a secure key using: openssl rand -base64 32
MINIO_ENDPOINT=localhost
MINIO_PORT=9010
MINIO_ACCESS_KEY=lemdata
MINIO_SECRET_KEY=GENERATE_YOUR_OWN_MINIO_SECRET_KEY
MINIO_BUCKET=lemdata-uploads
MINIO_USE_SSL=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000
