// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  TEACHER
  PARENT
  ADMIN
}

enum GameType {
  FILL_IN_BLANKS    // השלמת משפטים
  MATCHING          // התאמות
  MULTIPLE_CHOICE   // בחירה מרובה
  WORD_ORDER        // סידור מילים
}

enum DifficultyLevel {
  EASY
  MEDIUM
  HARD
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(STUDENT)
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  conversations Conversation[]
  messages      Message[]
  images        Image[]
  games         Game[]
  gameSessions  GameSession[]
  analytics     UserAnalytics[]

  @@index([email])
  @@index([role])
}

model Conversation {
  id        String   @id @default(uuid())
  userId    String
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  @@index([userId])
  @@index([userId, updatedAt]) // Composite index for sorting user conversations
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  userId         String
  content        String
  role           String       // 'user' | 'assistant'
  model          String?      // 'gemini' | 'huggingface' | 'ollama'
  cost           Float        @default(0)
  metadata       Json?
  createdAt      DateTime     @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id])

  @@index([conversationId])
  @@index([conversationId, createdAt]) // Composite index for fetching conversation messages
  @@index([userId])
  @@index([userId, createdAt]) // Composite index for user message history
  @@index([createdAt])
}

model Image {
  id          String   @id @default(uuid())
  userId      String
  url         String
  originalName String
  size        Int      // bytes
  mimeType    String
  ocrText     String?
  analysis    Json?
  createdAt   DateTime @default(now())

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  games Game[]

  @@index([userId])
}

model Game {
  id             String          @id @default(uuid())
  userId         String
  imageId        String?         // התמונה ממנה נוצר המשחק
  title          String
  description    String?
  type           GameType
  difficulty     DifficultyLevel @default(MEDIUM)
  content        Json            // תוכן המשחק (שאלות, תשובות, וכו')
  sourceText     String?         // הטקסט ממנו נוצר המשחק
  aiModel        String?         // המודל שיצר את המשחק
  metadata       Json?           // מטא דאטה נוספת
  isPublic       Boolean         @default(false)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  image        Image?        @relation(fields: [imageId], references: [id], onDelete: SetNull)
  gameSessions GameSession[]

  @@index([userId])
  @@index([imageId])
  @@index([type])
  @@index([difficulty])
  @@index([isPublic])
}

model GameSession {
  id          String   @id @default(uuid())
  userId      String
  gameId      String
  score       Int      @default(0)
  maxScore    Int      // הציון המקסימלי האפשרי
  completed   Boolean  @default(false)
  timeSpent   Int?     // זמן במילישניות
  answers     Json?    // תשובות המשתמש
  startedAt   DateTime @default(now())
  completedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([gameId])
  @@index([completed])
  @@index([userId, gameId]) // למציאת הסשנים של משתמש במשחק מסוים
}

model UserAnalytics {
  id                String   @id @default(uuid())
  userId            String
  date              DateTime @db.Date
  questionsAsked    Int      @default(0)
  aiCostTotal       Float    @default(0)
  aiQueriesGemini   Int      @default(0)
  aiQueriesHugging  Int      @default(0)
  aiQueriesLocal    Int      @default(0)
  imagesUploaded    Int      @default(0)
  gamesCreated      Int      @default(0)
  gamesPlayed       Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

