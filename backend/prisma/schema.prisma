// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  TEACHER
  PARENT
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(STUDENT)
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  conversations Conversation[]
  messages      Message[]
  images        Image[]

  @@index([email])
  @@index([role])
}

model Conversation {
  id        String   @id @default(uuid())
  userId    String
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  @@index([userId])
  @@index([userId, updatedAt]) // Composite index for sorting user conversations
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  userId         String
  content        String
  role           String       // 'user' | 'assistant'
  model          String?      // 'gemini' | 'huggingface' | 'ollama'
  cost           Float        @default(0)
  metadata       Json?
  createdAt      DateTime     @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id])

  @@index([conversationId])
  @@index([conversationId, createdAt]) // Composite index for fetching conversation messages
  @@index([userId])
  @@index([userId, createdAt]) // Composite index for user message history
  @@index([createdAt])
}

model Image {
  id          String   @id @default(uuid())
  userId      String
  url         String
  originalName String
  size        Int      // bytes
  mimeType    String
  ocrText     String?
  analysis    Json?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

